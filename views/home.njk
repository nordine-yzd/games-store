{% extends "layout.njk" %}

{% block top%}{% endblock %}
{% block contenu%}
 <!-- Header-->
        <header class="bg-dark py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="text-center text-white">
                    <h1 class="display-4 fw-bolder">Game Store</h1>
                    <p class="lead fw-normal text-white-50 mb-0">Welcome, here you can buy your favorite games for the best price. What are you waiting at ? Start purchasing now !</p>
                </div>
            </div>
        </header><br>


<section class="py-5 bg-light">
  <div class="container px-4 px-lg-5 mt-5">
    {# <h2 class="fw-bolder mb-4">Related games</h2> #}
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
{% for game in arrayOfFourGame%}
<div class="col mb-5">
  <div class="card h-100">
    <!-- Product image-->
    <img class="card-img-top bg-image" src="{{game.cover.url}}" alt="..." />
    <!-- Product details-->
    <div class="card-body p-6">
      <div class="text-center">
          <!-- Product name-->
          <h5 class="fw-bolder">{{game.name}}</h5>
      </div>
    </div>
    <!-- Product actions-->
    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
      <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="/game/{{game._id}}">View options</a></div>
    </div>
  </div>
</div>

{% endfor %}
</div>
</div>
</section>

    <!-- Footer-->
        <footer class="py-5 bg-dark footer">
            <div class="container-fluid"><p class="m-0 text-center text-white">Copyright &copy; Your Website 2021</p></div>
        </footer>

{% endblock %}





