{% extends "layout.njk" %}

{% block top%}{% endblock %}
{% block contenu%}
  <form method="POST" action="/createAccountForm">
    <h3>Your firstName</h3><input type="text" name="firstName" placeholder="firstName" required />
    <h3>Your lastName</h3><input type="text" name="lastName" placeholder="lastName" required/>
    <h3>Your Email</h3><input type="text" name="email" placeholder="email" required/>
    <h3>Your login</h3><input type="text" name="login" placeholder="login" required/>
    <h3>Your password</h3><input type="password" name="password" placeholder="Password" required/>
    <button type="submit">
      Login
    </button>
  </form>
  {% if errorMessage %}
    <div>User already exist</div>
  {% endif %}
{% endblock %}

