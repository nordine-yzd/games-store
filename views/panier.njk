{% extends "layout.njk" %}

{% block top%}{% endblock %}
{% block contenu%}
{% if arrayGameSelected %}
    {% for game in arrayGameSelected %}
        <div>
          <h3>{{game.name}}</h3>
          <img src="{{game.cover.url}}"/>
          <a href="/deleteGamesInToPanier?gameSelect={{game._id}}">Delete</a>
        </div>
    {% endfor %}
  {% endif %}
{% endblock %}



<div class="card">
  <div class="card-header">
     <img src="{{game.cover.url}}"/>
      <h3>{{game.name}}</h3>
  </div>
  <div class="card-body">
    <h5 class="card-title">Special title treatment</h5>
    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
    <a href="#" class="btn btn-primary">Go somewhere</a>
  </div>
</div>
