{% extends "layout.njk" %}

{% block top%}{% endblock %}
{% block contenu%}
{% if game %}

    <div class="container" id="details" class="shadow-lg p-3 mb-5 bg-body rounded" ><br><br>
      <div class="container" id="imgDetails" class="shadow-lg p-3 mb-5 bg-body rounded">

        {# premiere partie game titre #}
        <div class="row">
          <div class="col" >
            {# 1 of 2 #}
              <img src="{{game.cover.url}}" class="shadow-lg p-3 mb-5 bg-body rounded"/>
          </div>
          <div class="col" >
            {# 2 of 2 #}
            <h3>{{game.name}}</h3><br>
            <p>{{game.summary}}</p>
          </div>
            <button type="button" class="btn btn-lg btn-danger" data-bs-toggle="popover" title="Popover title" data-bs-content="And here's some amazing content. It's very engaging. Right?">
              Add to Basket
            </button>
        </div><br><br>

          {# deuxieme partie platform  #}
          <div class="row">
            <div class="col" >
              {# 1 of 2 #}
              <img src="{{game.platform.platform_logo_url}}" class="shadow-lg p-3 mb-5 bg-body rounded"/>
            </div>
            <div class="col" >
                {# 2 of 2 #}
                <h3>{{game.platform.name}}</h3><br>
            </div>
          </div>
    </div>

{% if addPanierValidate %}
  <p align="center">{{game.name}} ajouter au panier avec succ√®s !</p>
{% endif %}

{% endif %}

{% endblock %}
